{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["ES2021"],
    "outDir": "./dist",
    "rootDir": "./src",
    
    /* Module Resolution */
    "moduleResolution": "node",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    
    /* Decorator Support */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    
    /* Type Checking */
    "strict": true,
    "strictPropertyInitialization": false,
    "strictNullChecks": true,
    "noImplicitAny": false,
    
    /* Additional Checks */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    
    /* Output */
    "sourceMap": true,
    "removeComments": true,
    "declaration": false,
    
    /* Advanced */
    "incremental": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}